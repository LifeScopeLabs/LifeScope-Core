{
  "domain": "lifescope.io",

  "logging": {
    "severity": "trace",
    "targets": [
      {
        "type": "console",
        "formatter": "human"
      }
    ]
  },

  "cors":
  {
    "address": "https://app.lifescope.io",
    "credentials": true
  },
  
  "objectMaxLimit": 100,

  "aws": {
    "credentials": {
      "AWSAccessKeyId": null,
      "AWSSecretKey": null
    },

    "s3": {
      "locations": {
        "bucket_name": null
      }
    }
  },

  "mongodb": {
    "address": "mongodb://127.0.0.1",
    "options": {
      "poolSize": 5
    }
  },

  "cookieConsent": "cookieconsent",

  "sessions": {
    "cookieName": "sessionid",
    "expiration": 1209600,
    "sessionExpiration": 600
  },

  "oauth": {
    "tempCookieName": "auth_parameters"
  },

  "csrf": {
    "saltLength": 64,
    "secretLength": 32
  },

  "staticfiles": {
    "directories": [
      "artifacts",
      "static"
    ],
    "path": "/static"
  },

  "templates": {
    "directory": "templates"
  },

  "api": {
    "key": "***INSERT BITSCOOP API KEY HERE***",
    "address": {
      "protocol": "http",
      "hostname": "localhost",
      "port": "8081",
      "host_header": {
        "main": "api.bitscoop.com",
        "subdomain": "provider.api.bitscoop.com"
      }
    }
  },

  "validationSchemas": "schemas/**/*.json"
}
